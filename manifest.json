{
  "manifest_version": 3,
  "name": "CatChat Side Panel",
  "version": "1.0",
  "description": "A side panel with CatChat!",
  "permissions": [
    "sidePanel",
    "camera",
    "microphone"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_title": "Open CatChat Side Panel"
  }
}