{
  "manifest_version": 3,
  "name": "CatChat Sidebar",
  "version": "1.0",
  "description": "A sidebar with CatChat!",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": ""
  },
  "background": {
    "service_worker": "background.js"
  },
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_title": "CatChat"
  }
}